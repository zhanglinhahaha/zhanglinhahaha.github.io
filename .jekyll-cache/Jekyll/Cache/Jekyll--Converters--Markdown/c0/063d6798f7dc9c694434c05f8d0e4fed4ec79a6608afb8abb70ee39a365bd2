#include &lt;iostream&gt;
#include &lt;fstream&gt;
#include &lt;vector&gt;
#include &lt;string&gt;
#include &lt;sstream&gt;

void t89() {
    std::vector&lt;std::string&gt; words;
    std::ifstream fin;
    fin.open("test.txt");
    std::string word;
    while(!fin.eof()) {
		std::string line;
        getline(fin, line);
		std::istringstream record(line);
		while(record &gt;&gt; word)
        	words.push_back(word);
    }
    fin.close();
    for(auto w : words) {
        std::cout &lt;&lt; w &lt;&lt; "\n";
    }
}

int main() {
    t89();
    return 0;
}
