void t84() {
    std::vector&lt;std::string&gt; lines;
    std::ifstream fin;
    fin.open("test.txt");
    std::string line;
    while(!fin.eof()) {
        getline(fin, line);
        lines.push_back(line);
    }
    fin.close();
    lines.pop_back();
    for(auto l : lines) {
        std::cout &lt;&lt; l &lt;&lt; "\n";
    }
}
