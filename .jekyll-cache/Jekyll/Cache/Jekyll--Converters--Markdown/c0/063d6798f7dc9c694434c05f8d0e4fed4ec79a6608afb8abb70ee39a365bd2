    if(argc != 2) {
        return -1;
    }
    std::ifstream fin;
    fin.open(argv[1]);
    if(fin) {
        while(!fin.eof()) {
            std::string goods;
            getline(fin, goods);
            std::cout &lt;&lt; goods &lt;&lt; "\n";
        }
    }
    fin.close();
    return 0;
}

