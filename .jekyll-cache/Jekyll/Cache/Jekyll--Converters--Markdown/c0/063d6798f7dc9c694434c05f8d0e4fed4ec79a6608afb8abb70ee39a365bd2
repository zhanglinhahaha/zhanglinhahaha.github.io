#include &lt;fstream&gt;
#include &lt;string&gt;

int main(int argc, char *argv[]) {
    if(argc != 3) {
        return -1;
    }
    std::ifstream fin;
    std::ofstream fout;
    fout.open(argv[2]);
    fin.open(argv[1]);
    std::string item;
    if(fin &amp;&amp; fout) {
        while(!fin.eof() &amp;&amp; fin.peek() != EOF) {
            getline(fin, item);
            fout &lt;&lt; item &lt;&lt; "\n";
        }
    }
    fin.close();
	fout.close();
    return 0;
}
