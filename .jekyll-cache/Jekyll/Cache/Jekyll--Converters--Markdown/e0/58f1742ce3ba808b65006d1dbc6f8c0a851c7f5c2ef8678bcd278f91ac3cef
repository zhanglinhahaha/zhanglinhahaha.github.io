class ClassA {
public:
    void doSomethingA() { }
};
class ClassB {
public:
    void doSomethingB() { }
};
class ClassC {
public:
    void doSomethingC() { }
};
//é—¨é¢è§’è‰²ç±»
class Facade {
public:
    void methodA() {a.doSomethingA;}
    void methodB() {b.doSomethingB;}
    void methodC() {c.doSomethingC;}
private:
    ClassA a;
    ClassB b;
    ClassC c;
};</p>
